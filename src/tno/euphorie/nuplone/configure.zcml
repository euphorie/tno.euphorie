<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:z3c="http://namespaces.zope.org/z3c"
  xmlns:zcml="http://namespaces.zope.org/zcml">

  <adapter factory=".widget.ChoiceWidgetFactory" />

  <z3c:widgetTemplate
    mode="input"
    widget=".interfaces.ILargeTextAreaWidget"
    layer="..interfaces.ITnoFormLayer"
    template="templates/largetextarea_input.pt"
    />

  <z3c:widgetTemplate
    widget="plone.app.z3cform.wysiwyg.widget.IWysiwygWidget"
    template="templates/wysiwyg_input.pt"
    layer="..interfaces.ITnoFormLayer"
    mode="input"
    zcml:condition="not-installed plonetheme.nuplone.z3cform.wysiwyg"
    />

  <z3c:widgetTemplate
    widget="plonetheme.nuplone.z3cform.wysiwyg.IWysiwygWidget"
    template="templates/wysiwyg_input.pt"
    layer="..interfaces.ITnoFormLayer"
    mode="input"
    zcml:condition="installed plonetheme.nuplone.z3cform.wysiwyg"
    />

  <browser:page
      name="index.html"
      for="zExceptions.Unauthorized"
      class="plonetheme.nuplone.skin.error.Unauthorized"
      permission="zope2.Public"
      layer="tno.euphorie.interfaces.ITnoContentSkinLayer"
      template="templates/error_unauthorized.pt"
      />

</configure>

